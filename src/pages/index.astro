---
import Layout from "../layouts/Layout.astro";
import TopicsGrid from "@/components/TopicsGrid";
import ResourceCard from "@/components/ResourceCard.astro";
---

<Layout title="Red Medical Advisor.">
	<main>
		<section class="inicio-contenedor">
			<h1>Encuentra La Asesoria Que Necesitas</h1>
			<h3>
				libros, guias y recursos para
				aumentar tus conocimientos academicos
			</h3>
		</section>
		<section class="inicio-temas">
			<TopicsGrid></TopicsGrid>
		</section>

		<section id="recursos" class="inicio-recursos">
			<h2>Expande tus conocimientos medicos</h2>
			<div class="inicio-recursos-grid">
				<ResourceCard
					icon="📚"
					title="Biblioteca Digital"
					description="Accede a nuestra colección de PDFs y libros médicos cuidadosamente seleccionados"
					link="#"
				/>
				<ResourceCard
					icon="🎥"
					title="Videotutoriales"
					description="Aprende con nuestros videos explicativos sobre procedimientos y conceptos médicos"
					link="#"
				/>
				<ResourceCard
					icon="👩‍⚕️"
					title="Tutorías Personalizadas"
					description="Agenda sesiones one-on-one con expertos en tu área de interés"
					link="#"
				/>
				<ResourceCard
					icon="🔬"
					title="Foro"
					description="Platica con una comunidad de medicos y expandan juntos sus conocimientos"
					link="#"
				/>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		background-color: #E11D48;
		color: rgb(0, 0, 0);
	}
	
	.inicio-contenedor{
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		padding: 5rem;
		width: 50%;
		margin: auto;
		text-align: center;
		gap: 1.5rem;
		height: 50vh;
		color: white;
	}

	.inicio-contenedor h1{
		font-size: 48px;
		font-weight: 700;
	}
	.inicio-contenedor h3{
		font-size: 18px;
		font-weight: 300;
		color: rgb(231, 231, 231);
	}

	.inicio-temas{
		display: flex;
		justify-content: center;
		flex-direction: column;
		background-color: #F4F4F5;
		height: 50vh;
	}

	.inicio-recursos{
		display: flex;
		justify-content: center;
		flex-direction: column;
		background-color: #F4F4F5;
	}

	.inicio-recursos h2{
		font-size: 32px;
    	font-weight: bold;
    	margin: 0 auto;
	}

	.inicio-recursos-grid{
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		padding: 10rem;
	}
</style>
