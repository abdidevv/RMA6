---
interface Props {
	icon: string;
	title: string;
	description: string;
	link: string;
}

const { icon, title, description, link } = Astro.props;
---

<a href={link} class="resource-card">
	<span class="icon">{icon}</span>
	<h3>{title}</h3>
	<p>{description}</p>
	<span class="learn-more">Saber más →</span>
</a>

<style>
	.resource-card {
		background: white;
		border-radius: 12px;
		padding: 2rem;
		text-decoration: none;
		color: #1e293b;
		box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.resource-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
	}

	.icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		display: block;
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: #ff3131;
	}

	p {
		margin-bottom: 1.5rem;
		flex-grow: 1;
	}

	.learn-more {
		color: #ff3131;
		font-weight: 600;
		display: block;
		margin-top: auto;
	}
</style>
